---
import { ImageMissingAlt } from "node_modules/astro/dist/core/errors/errors-data";
import site from "../data/site.json";
import { Image } from "astro:assets";

interface Props {
  imageAlt: string;
  imageSrc: string;
  flip: boolean;
}

const { imageAlt, imageSrc, flip } = Astro.props;
---

<div class="min-h-[92vh] relative w-full">
  <div
    class="block left-0 top-0 lg:hidden absolute h-full w-full -z-20 overflow-hidden bg-cover bg-center bg-[url('https://breakthecyclesministries.com/wp-content/uploads/2024/04/0-6779cbdd-d3a5-4660-b9c7-c5319e0c7c3b-1920x1080.jpg')]"
  >
  </div>
  <div
    class="absolute -z-10 inset-0 bg-black lg:hidden opacity-80 backdrop-blur-sm"
  >
  </div>
  <div class="overflow-hidden w-full h-full pt-16 sm:pt-16">
    <div class="mx-auto md:px-6 lg:px-8">
      <div
        class="lg:grid gap-x-8 gap-y-16 lg:gap-y-20 lg:grid-cols-2 lg:items-start"
      >
        <div class={`hidden lg:block sm:px-6 lg:px-0 order-1 lg:order-2`}>
          <div
            class="relative isolate overflow-hidden lg:h-[28rem] sm:mx-auto sm:max-w-xl sm:rounded-3xl lg:mx-0 lg:max-w-none"
          >
            <img
              class="mx-auto rounded-xl min-h-full min-w-full object-center"
              src={imageSrc}
              alt={imageAlt}
            />
          </div>
        </div>
        <div class={`px-6 md:px-0 lg:pr-4 lg:pt-4 order-2 lg:order-1`}>
          <div
            class="mx-auto max-w-2xl lg:mx-0 lg:max-w-lg text-white lg:text-content-1"
          >
            <p class="text-md">Empowering Journeys of Faith</p>
            <h1 class="mt-4 mb-8 text-6xl">Break the Cycle Ministries</h1>
            <p class="text-lg">
              Under the steadfast leadership of William Bowen, Break the Cycle
              Ministries offers a sanctuary for transformation and spiritual
              empowerment. Our commitment is to guide individuals through their
              personal adversities, leveraging the profound power of faith to
              foster healing and growth.
            </p>
            <div class="mt-8">
              <button
                type="button"
                class="rounded-full bg-primary px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                >Explore Our Mission</button
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
