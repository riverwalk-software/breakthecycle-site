---
import CTAHelper from "./CTAHelper";
import { Image } from "astro:assets";

interface Props {
  alt: string;
  description: string;
  src: string;
  title: string;
  supplemental?: string;
}

const { alt, description, src, title, supplemental } = Astro.props;
---

<CTAHelper {description} {title} {supplemental}>
  <slot />
  <img
    {alt}
    {src}
    class="absolute inset-0 w-full h-full object-cover"
    slot="image"
  />
</CTAHelper>
